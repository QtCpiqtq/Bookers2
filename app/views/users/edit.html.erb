 <div class = "container">
    <div class = "row">
        <div class = "col-5 mx-auto">
            <h2>User info</h2>
            <%= form_with model: @user, url: user_path(@user.id), method: :patch do |f| %>
            <p>Name</p>
            <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前", class: "w-100" %>
            <p class = "mt-3">Image</p>
            <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
            <p class = "mt-3">Introduction</p>
            <%= f.text_area :introduction, class: "w-100" %>
            <%= f.submit "Update User", class: "btn btn-secondary mt-3" %>
            <% end %>
        </div>
    </div>
</div>
