<div class = "container">
    <div class = "row">
        <div class = "col-5 mx-auto">
            <h1>Editing Book</h1>
            
            <% if @book.errors.any? %>
                <h3><%= @book.errors.count %> errors prohibited this obj from being saved:</h3>
                <ul>
                    <% @book.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                    <% end %>
                </ul>
            <% end %>
            
            <%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
                <p class ="mt-3">Title</p>
                <%= f.text_field :title, class: "w-100" %>
                <p class ="mt-3">Opinion</p>
                <%= f.text_area :body, class: "w-100" %>
                <%= f.submit "Update Book", class: "btn btn-success mt-3" %>
            <% end %>
            <p class ="mt-3">
            <%= link_to "Show", book_path(@book.id) %>
            |
            <%= link_to "Back", books_path %>
            </p>
            
        </div>
    </div>
</di

